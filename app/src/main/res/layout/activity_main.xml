<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context="com.example.aditya.sample_game.MainActivity">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <ImageView
            android:id="@+id/img_grid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            app:srcCompat="@drawable/grid" />

        <ImageView
            android:id="@+id/imageView17"
            android:layout_width="42dp"
            android:layout_height="44dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="104dp"
            android:layout_marginStart="104dp"
            android:layout_marginTop="169dp"
            app:srcCompat="@drawable/bulb" />

        <ImageView
            android:id="@+id/imageView16"
            android:layout_width="42dp"
            android:layout_height="44dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="104dp"
            android:layout_marginStart="104dp"
            android:layout_marginTop="169dp"
            app:srcCompat="@drawable/bulb" />

        <ImageView
            android:id="@+id/img_click1"
            android:layout_width="42dp"
            android:layout_height="44dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="104dp"
            android:layout_marginStart="104dp"
            android:layout_marginTop="169dp"
            android:onClick="click1"
            android:visibility="visible"
            app:srcCompat="@drawable/white" />

        <ImageView
            android:id="@+id/img_click2"
            android:layout_width="42dp"
            android:layout_height="44dp"
            android:layout_alignTop="@+id/imageView17"
            android:layout_centerHorizontal="true"
            android:onClick="click2"
            android:visibility="visible"
            app:srcCompat="@drawable/white" />

        <ImageView
            android:id="@+id/img_click3"
            android:layout_width="42dp"
            android:layout_height="44dp"
            android:layout_alignTop="@+id/img_click2"
            android:layout_marginLeft="18dp"
            android:layout_marginStart="18dp"
            android:layout_toEndOf="@+id/img_click2"
            android:layout_toRightOf="@+id/img_click2"
            android:onClick="click3"
            android:visibility="visible"
            app:srcCompat="@drawable/white" />

        <ImageView
            android:id="@+id/img_click4"
            android:layout_width="42dp"
            android:layout_height="44dp"
            android:layout_alignLeft="@+id/imageView17"
            android:layout_alignStart="@+id/imageView17"
            android:layout_alignTop="@+id/img_click6"
            android:onClick="click4"
            android:visibility="visible"
            app:srcCompat="@drawable/white" />

        <ImageView
            android:id="@+id/img_click5"
            android:layout_width="42dp"
            android:layout_height="44dp"
            android:layout_alignLeft="@+id/img_click2"
            android:layout_alignStart="@+id/img_click2"
            android:layout_alignTop="@+id/img_click4"
            android:onClick="click5"
            android:visibility="visible"
            app:srcCompat="@drawable/white" />

        <ImageView
            android:id="@+id/img_click6"
            android:layout_width="42dp"
            android:layout_height="44dp"
            android:layout_alignLeft="@+id/img_click3"
            android:layout_alignStart="@+id/img_click3"
            android:layout_centerVertical="true"
            android:onClick="click6"
            android:visibility="visible"
            app:srcCompat="@drawable/white" />

        <ImageView
            android:id="@+id/img_click7"
            android:layout_width="42dp"
            android:layout_height="44dp"
            android:layout_alignLeft="@+id/img_click4"
            android:layout_alignStart="@+id/img_click4"
            android:layout_below="@+id/img_click4"
            android:layout_marginTop="14dp"
            android:onClick="click7"
            android:visibility="visible"
            app:srcCompat="@drawable/white" />

        <ImageView
            android:id="@+id/img_click8"
            android:layout_width="42dp"
            android:layout_height="44dp"
            android:layout_alignLeft="@+id/img_click5"
            android:layout_alignStart="@+id/img_click5"
            android:layout_alignTop="@+id/img_click7"
            android:onClick="click8"
            android:visibility="visible"
            app:srcCompat="@drawable/white" />

        <ImageView
            android:id="@+id/img_click9"
            android:layout_width="42dp"
            android:layout_height="44dp"
            android:layout_alignEnd="@+id/img_click6"
            android:layout_alignRight="@+id/img_click6"
            android:layout_alignTop="@+id/img_click8"
            android:onClick="click9"
            android:visibility="visible"
            app:srcCompat="@drawable/white" />

        <TextView
            android:id="@+id/txtbx1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/img_click2"
            android:layout_alignLeft="@+id/imageView17"
            android:layout_alignStart="@+id/imageView17"
            android:layout_marginBottom="46dp"
            android:fontFamily="cursive"
            android:text="Turn : "
            android:textSize="25sp" />

        <TextView
            android:id="@+id/txtbx2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/txtbx1"
            android:layout_alignBottom="@+id/txtbx1"
            android:layout_alignEnd="@+id/img_click3"
            android:layout_alignRight="@+id/img_click3"
            android:fontFamily="cursive"
            android:textSize="25sp" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
